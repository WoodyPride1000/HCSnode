    <!-- Logic Script -->
    <script>
        // --- 1. Topology Visualizer Logic ---
        const canvas = document.getElementById('topologyCanvas');
        const ctx = canvas.getContext('2d');
        let width, height;
        let selectedNodeId = null;

        // Mock Data for Visualization
        const nodes = [
            { id: 0, x: 0, y: 0, label: "自ノード (Me)", ip: "127.0.0.1", type: "self", metrics: { hop: 0, bw: 0, stab: 0, rtt: 0 }, score: 0 },
            { id: 1, x: -100, y: -150, label: "Node A", ip: "192.168.1.10", type: "candidate", metrics: { hop: 2, bw: 80, stab: 90, rtt: 20 }, score: 0 },
            { id: 2, x: 100, y: -120, label: "Node B", ip: "192.168.1.11", type: "parent", metrics: { hop: 1, bw: 95, stab: 95, rtt: 5 }, score: 0 },
            { id: 3, x: 0, y: -250, label: "Node C", ip: "192.168.1.12", type: "candidate", metrics: { hop: 3, bw: 40, stab: 60, rtt: 150 }, score: 0 },
            { id: 4, x: -150, y: -50, label: "Node D", ip: "192.168.1.13", type: "candidate", metrics: { hop: 2, bw: 70, stab: 80, rtt: 45 }, score: 0 },
        ];

        const connections = [
            { from: 0, to: 2 }, // Connected to parent
            { from: 1, to: 3 },
            { from: 2, to: 3 },
            { from: 2, to: 4 }
        ];

        // Function to calculate score based on Section 3.1
        function calculateAlgorithmScore(metrics) {
            let score = 1000.0;
            score -= metrics.hop * 10.0;
            score += metrics.bw * 5.0;
            score += metrics.stab * 2.0;
            score -= metrics.rtt * 0.1;
            if (metrics.rtt > 1000) score -= 500.0;
            return Math.floor(score * 10) / 10;
        }

        // Calculate initial scores
        nodes.forEach(n => {
            if(n.type !== 'self') n.score = calculateAlgorithmScore(n.metrics);
        });

        // Canvas Resizing
        function resizeCanvas() {
            const parent = canvas.parentElement;
            canvas.width = parent.clientWidth;
            canvas.height = parent.clientHeight;
            width = canvas.width;
            height = canvas.height;
            draw();
        }
        window.addEventListener('resize', resizeCanvas);

        // Drawing Loop
        function draw() {
            ctx.clearRect(0, 0, width, height);
            
            // Center content
            const centerX = width / 2;
            const centerY = height * 0.8;

            // Draw Connections
            ctx.lineWidth = 2;
            ctx.strokeStyle = '#cbd5e1';
            connections.forEach(conn => {
                const from = nodes.find(n => n.id === conn.from);
                const to = nodes.find(n => n.id === conn.to);
                
                ctx.beginPath();
                ctx.moveTo(centerX + from.x, centerY + from.y);
                ctx.lineTo(centerX + to.x, centerY + to.y);
                ctx.stroke();
            });

            // Draw Nodes
            nodes.forEach(node => {
                const cx = centerX + node.x;
                const cy = centerY + node.y;

                // Selection Halo
                if (selectedNodeId === node.id) {
                    ctx.beginPath();
                    ctx.arc(cx, cy, 28, 0, Math.PI * 2);
                    ctx.fillStyle = 'rgba(59, 130, 246, 0.2)'; // Blue halo
                    ctx.fill();
                }

                ctx.beginPath();
                ctx.arc(cx, cy, 20, 0, Math.PI * 2);
                
                // Color based on type
                if (node.type === 'self') ctx.fillStyle = '#3b82f6'; // Blue
                else if (node.type === 'parent') ctx.fillStyle = '#10b981'; // Emerald
                else ctx.fillStyle = '#94a3b8'; // Slate

                ctx.fill();
                ctx.strokeStyle = '#fff';
                ctx.lineWidth = 3;
                ctx.stroke();

                // Labels
                ctx.fillStyle = '#1e293b';
                ctx.font = '12px "Noto Sans JP"';
                ctx.textAlign = 'center';
                ctx.fillText(node.label, cx, cy + 35);
                
                // Store calc coords for click detection
                node._cx = cx;
                node._cy = cy;
            });
        }

        // Interaction
        canvas.addEventListener('click', (e) => {
            const rect = canvas.getBoundingClientRect();
            const mouseX = e.clientX - rect.left;
            const mouseY = e.clientY - rect.top;

            let clicked = null;
            nodes.forEach(node => {
                const dist = Math.sqrt((mouseX - node._cx)**2 + (mouseY - node._cy)**2);
                if (dist < 25) clicked = node;
            });

            if (clicked && clicked.type !== 'self') {
                selectedNodeId = clicked.id;
                updateDetailPanel(clicked);
                draw();
            }
        });

        // Update Details Panel
        function updateDetailPanel(node) {
            document.getElementById('nodeDetailsEmpty').classList.add('hidden');
            document.getElementById('nodeDetailsContent').classList.remove('hidden');

            document.getElementById('detailIp').textContent = node.ip;
            document.getElementById('detailIsParent').textContent = node.type === 'parent' ? '現在の親ノード' : '候補ノード';
            document.getElementById('detailIsParent').className = node.type === 'parent' 
                ? "px-2 py-1 bg-emerald-100 text-emerald-700 text-xs rounded font-medium"
                : "px-2 py-1 bg-slate-100 text-slate-600 text-xs rounded font-medium";
            
            document.getElementById('detailScore').textContent = node.score;

            // Update Metrics Bars
            document.getElementById('detailHop').textContent = node.metrics.hop;
            document.getElementById('barHop').style.width = (node.metrics.hop / 20 * 100) + '%';

            document.getElementById('detailBw').textContent = node.metrics.bw;
            document.getElementById('barBw').style.width = node.metrics.bw + '%';

            document.getElementById('detailStability').textContent = node.metrics.stab;
            document.getElementById('barStability').style.width = node.metrics.stab + '%';

            document.getElementById('detailRtt').textContent = node.metrics.rtt;
            document.getElementById('barRtt').style.width = Math.min((node.metrics.rtt / 500 * 100), 100) + '%';
            
            // Format random time
            const now = new Date();
            document.getElementById('detailTime').textContent = now.toLocaleTimeString();
        }

        // Init Canvas
        resizeCanvas();


        // --- 2. Score Algorithm Logic (Chart.js) ---
        const ctxChart = document.getElementById('scoreChart').getContext('2d');
        
        let scoreChart = new Chart(ctxChart, {
            type: 'bar',
            data: {
                labels: ['Base', 'Hop (-)', 'BW (+)', 'Stab (+)', 'RTT (-)'],
                datasets: [{
                    label: 'Score Contribution',
                    data: [1000, 0, 0, 0, 0],
                    backgroundColor: [
                        '#94a3b8', // Base
                        '#f43f5e', // Hop (Neg)
                        '#3b82f6', // BW (Pos)
                        '#10b981', // Stab (Pos)
                        '#f43f5e'  // RTT (Neg)
                    ],
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.raw + ' points';
                            }
                        }
                    }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Sliders
        const slHop = document.getElementById('inputHop');
        const slBw = document.getElementById('inputBw');
        const slStab = document.getElementById('inputStab');
        const slRtt = document.getElementById('inputRtt');

        // Display Values
        const dHop = document.getElementById('valHop');
        const dBw = document.getElementById('valBw');
        const dStab = document.getElementById('valStab');
        const dRtt = document.getElementById('valRtt');
        
        const dScore = document.getElementById('calcResult');
        const dPenalty = document.getElementById('penaltyBadge');

        function updateAlgorithm() {
            const hop = parseInt(slHop.value);
            const bw = parseInt(slBw.value);
            const stab = parseInt(slStab.value);
            const rtt = parseInt(slRtt.value);

            // Update Text
            dHop.textContent = hop;
            dBw.textContent = bw;
            dStab.textContent = stab;
            dRtt.textContent = rtt;

            // Calculate components
            const base = 1000;
            const cHop = hop * 10;
            const cBw = bw * 5;
            const cStab = stab * 2;
            const cRtt = rtt * 0.1;
            
            let total = base - cHop + cBw + cStab - cRtt;
            
            // RTT Penalty
            if (rtt > 1000) {
                total -= 500;
                dPenalty.classList.remove('hidden');
            } else {
                dPenalty.classList.add('hidden');
            }

            dScore.textContent = total.toFixed(1);

            // Update Chart
            scoreChart.data.datasets[0].data = [base, -cHop, cBw, cStab, -cRtt];
            scoreChart.update();
        }

        // Listeners
        [slHop, slBw, slStab, slRtt].forEach(sl => {
            sl.addEventListener('input', updateAlgorithm);
        });

        // Init
        updateAlgorithm();

    </script>
    
    <!-- CONFIRMATION: NO SVG graphics used. NO Mermaid JS used. -->
</body>
</html>
